<main>
<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'show', book_path(id: book.id) %>
    <%= link_to 'edit', edit_book_path(id: book.id) %>
    <%= link_to 'destroy', destroy_book_path(id: book.id), method: :delete, "data-confirm" => "Aer you sure?" %>
    </td>
  </tr>
  <% end %>
  
</table>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>

<% if @book.errors.any? %>
<%= @book.errors.count %>errors prohibited this book from being saved:<br>
<% @book.errors.full_messages.each do |message| %>
<%= message %><br>
<% end %>
<% end %>

<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %><br>
<%= f.submit 'Create Book' %>
<% end %>
</main>